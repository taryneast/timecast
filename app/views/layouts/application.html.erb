<!DOCTYPE html>
<html>

<head>
  <title>Timecast</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/themes/base/jquery-ui.css" type="text/css" media="all" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script> 
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/i18n/jquery-ui-i18n.min.js" type="text/javascript"></script>

  <script>

  function getEstimateTime()
  {
    val = $('#minSlider').val();
    val += 60 * $('#hourSlider').val();
    val += 24*60 * $('#daySlider').val();

  }
  $(function () { 
	  $('#minSlider').slider({
	    orientation: 'horizontal',
	    min: 0,
	    max: 60,
	    value: 0
	  }).bind( "slidechange", function(event, ui) {
	    $('#challenge_estimate').val(getEstimateTime()) 
	  });
	  $('#hourSlider').slider({
	    orientation: 'horizontal',
	    min: 0,
	    max: 24,
	    value: 0
	  }).bind( "slidechange", function(event, ui) {
	    $('#challenge_estimate').val(getEstimateTime()) 
	  });
	  $('#daySlider').slider({
	    orientation: 'horizontal',
	    min: 0,
	    max: 365,
	    value: 0
	  }).bind( "slidechange", function(event, ui) {
	    $('#challenge_estimate').val(getEstimateTime()) 
	  }); 
  });

  </script>
</head>
<body>
  <div class="loginbox">
    <% if logged_in? %>
      Logged in as: <%= current_user.login %>
      <%= link_to 'logout', logout_path %>
    <% else %>
      <%= link_to 'login', login_path %> OR  <%= link_to 'signup', signup_path %> 
    <% end %>
  </div>
  <% if flash[:error].present? %>
  <div class="flash error">
    <h1><%= flash[:error] %></h1>
  </div>
  <% end %>

<%= yield %>

</body>
