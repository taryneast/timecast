  <div>BIG clock goes here!!!</div>
  <%= render :partial => 'stop_abort_buttons' %>
<% end %>

<p>
  <b>Name:</b>
  <%= @challenge.name %>
</p>

<p>
  <b>Description:</b>
  <%= @challenge.description %>
</p>

<p>
  <b>Estimate:</b>
  <%= @challenge.estimate %>
</p>

<p>
  <b>Started at:</b>
  <%= @challenge.started_at %>
</p>

<p>
  <b>Stopped at:</b>
  <%= @challenge.stopped_at %>
</p>

<p>
  <b>Completedin:</b>
